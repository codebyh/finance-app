{
  "Logging": {
    // All providers, LogLevel applies to all the enabled providers.
    "LogLevel": {
      // Default logging, Error and higher.
      "Default": "Information",
      // category: logLevel.  All Microsoft* categories, Warning and higher.
      "Microsoft.AspNetCore": "Warning"
    },
    // Debug provider
    "Debug": {
      "LogLevel": {
        // Overrides preceding LogLevel:Default setting.
        "Default": "Information",
        // Debug:Microsoft.Hosting category.
        "Microsoft.Hosting": "Trace"
      }
    },
    // EventSource provider
    "EventSource": {
      "LogLevel": {
        // All categories of EventSource provider.
        "Default": "Warning"
      }
    },
    "EventLog": {
      "LogLevel": {
        "Microsoft": "Information"
      }
    },
    "AzureAppServicesFile": {
      "IncludeScopes": true,
      "LogLevel": {
        "Default": "Warning"
      }
    },
    "AzureAppServicesBlob": {
      "IncludeScopes": true,
      "LogLevel": {
        "Microsoft": "Information"
      }
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information"
      }
    },
    "Console": {
      "IncludeScopes": true,
      "LogLevel": {
        "Microsoft.AspNetCore.Mvc.Razor.Internal": "Warning",
        "Microsoft.AspNetCore.Mvc.Razor.Razor": "Debug",
        "Microsoft.AspNetCore.Mvc.Razor": "Error",
        "Default": "Information"
      }
    }
  },
  "AllowedHosts": "*"
}
